@model ProjetoES2.Entities.Tarefa
@{
    ViewData["Title"] = "Criar nova tarefa";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
    
    <h1 class="display-4">Criar nova tarefa </h1>

</div>

<div class="row">
    <div class="col-md-4">
        <form asp-controller="Tarefa" asp-action="criar" method="post">
         
            <div class="form-group">
                <label  class="control-label">Descrição da tarefa</label>
                <input type="text" asp-for="Descricao" class="form-control" >
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Preço por Hora</label>
                <input type="text" asp-for="PrecoHora" class="form-control" >
                 <span asp-validation-for="PrecoHora" class="text-danger"></span>
            </div>
            
            <input style="margin-top: 10px" type="submit" class="btn btn-primary" value="Criar"/>
            <a asp-controller="Tarefa" asp-action="Index" role="button">Voltar</a>
        </form>

    </div>
</div>