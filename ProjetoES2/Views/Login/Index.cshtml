@model LoginModel

@{
    ViewBag.Title = "title";
    var hasError = ViewData["HasError"] as bool? ?? false;
    Layout = "_LoginPartial";
}
<div class="text-center">
    <h2>Login</h2>
</div>

<div class="row">
    <form asp-controller="Login" asp-action="Index" method="post">
        
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <!-- Email input -->
        <div class="form-group">
            
            <label class="control-label"> Email</label>
            <input type="email" asp-for="Email" class="form-control"/>
            <span asp-validation-for="Email" class="text-danger"></span>

        </div>
       
                   <div class="form-group">
                       <label class="control-label">Password</label>
                       <input type="password" asp-for="Password" class="form-control"/>
                  </div>

        <!-- Submit button -->
        <div class="form-group">
            <input type="submit" value="Entrar" class="btn btn-primary" />
            </div>

        <!-- Register buttons -->
        <div class="text-center">
            <p>Não está registado? <a asp-controller="Utilizadores" asp-action="Criar">Regista-te aqui</a></p>

        </div>
    </form>

@if (hasError)
        {
            <p style="color: red;">
                 As credenciais introduzidas estão erradas.
            </p>
        }
</div>
